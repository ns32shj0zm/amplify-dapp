.confirmDialog
    .ant-modal-body
        padding: 0

    .confirmTitle
        height: 48px
        line-height: @height
        margin: 0 10px
        padding: 0 18px
        font-weight: bold
        color: #4F5F6F
        font-size: 20px
        border-bottom: 1px solid #E1E7F0

    .confirmContent
        padding: 35px 30px 50px
        text-align: center

        .title
            padding: 30px 0 10px
            color: #000
            font-size: 16px

        .content
            color: #373737

    .confirmBtn
        display: flex
        padding: 0 15px 35px

        .btn
            margin: 0 15px
            flex: 1
            text-align: center
            font-size: 14px
            color: #fff
            height: 40px
            line-height: @height
            border-radius: 4px
            cursor pointer

            &.agree
                background: #5B87F7

            &.against
                background: #FF6C54