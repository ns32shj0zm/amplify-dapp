.page-governance
    background: url('./img/bg_banner.png') no-repeat top center

    @media screen and (max-width: 1200px)
        background: rgb(233, 244, 255)

    .header
        max-width: 372px
        height: 140px
        background: #FFFFFF
        border: 1px solid #E4EBF1
        margin: 0 auto
        box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.1)

    .content
        padding: 100px 0 300px
        display: flex
        margin: 0 auto
        width: 1000px

        .block
            box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.1)
            background: #fff

            .blockTitle
                height: 46px
                line-height: @height
                background: #F9FAFB
                border: 1px solid #E4EBF1
                padding: 0 30px

            &.left
                width: 380px

            &.right
                flex: 1
                margin: 0 0 0 32px

                .blockMain
                    padding: 0 30px