.page-governance
    background: url('./img/bg_banner.png') no-repeat top center
    background-size: 100% 400px

    @media screen and (max-width: 1200px)
        background: rgb(233, 244, 255)

    .header
        max-width: 372px
        height: 140px
        background: #FFFFFF
        border: 1px solid #E4EBF1
        margin: 0 auto
        box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.1)

    .content
        padding: 100px 0 300px
        display: flex
        margin: 0 auto
        width: 1000px

        .block
            box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.1)
            background: #fff

            .blockTitle
                height: 46px
                line-height: @height
                background: #F9FAFB
                border: 1px solid #E4EBF1
                padding: 0 30px

            &.left
                width: 380px

            &.right
                flex: 1
                margin: 0 0 0 32px

                .blockMain
                    padding: 0 30px 30px

                    .item
                        padding: 10px
                        border-bottom: 1px solid #F8F8F8

                        .title
                            color: #000
                            margin: 0 0 15px

                        .main
                            justifyContentSpaceBetween()

                            .left
                                display: flex

                                .btn
                                    color: #0C7E5C
                                    border: 1px solid #0C7E5C
                                    border-radius: 2px
                                    padding: 0 2px
                                    margin: 0 10px 0 0
                                    height: 22px
                                    line-height: @height

                                .text
                                    color: #8D8D8D

                            .right
                                .btn
                                    color: #fff
                                    background: #346BF0
                                    border-radius: 2px
                                    height: 22px
                                    line-height: @height
                                    width: 80px
                                    text-align: center

                                .text
                                    background: url(./img/dot.png) no-repeat left  center
                                    height: 22px
                                    line-height: @height
                                    padding: 0 0 0 24px
                                    color: #8D8D8D
